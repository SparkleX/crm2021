<mvc:View
	"controllerName": "sap.m.sample.ProgressIndicator.controller.ProgressIndicator"
	xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	class="viewPadding">
	<l:VerticalLayout>
		<u:FileUploader
			id="fileUploader"
			buttonOnly="true" 
			name="myFileUpload"
			uploadUrl="upload/"
			buttonText="Scan"
			fileType="pdf"
			tooltip="Upload your file to the local server"
			uploadOnChange= "true"
			uploadComplete="handleUploadComplete"/>
		<Button
			text="Upload File"
			press="handleUploadPress"/>
	</l:VerticalLayout>
</mvc:View>