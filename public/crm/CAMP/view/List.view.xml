<mvc:View controllerName="sap.sme.crm.CAMP.controller.List"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:table="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc.View"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar" 
	displayBlock="true">



	<f:DynamicPage headerExpanded="true" preserveHeaderStateOnScroll="true" toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Sales Orders" />
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>
		<!-- DynamicPage Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<fb:FilterBar id="idFilterBar" reset="onReset" useToolbar="false" showGoOnFB="true">
				 	<fb:filterItems>
						<fb:FilterItem name="A" label="Name">
							<fb:control>
								<Input />
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="B" label="Category">
							<fb:control>
								<Input />							
							</fb:control>
						</fb:FilterItem>
						<fb:FilterItem name="C" label="SupplierName">
							<fb:control>
								<Input />
							</fb:control>
						</fb:FilterItem> 
					</fb:filterItems>
				</fb:FilterBar>
				<Toolbar width="100%">
					<Select enabled="{/Enabled}" editable="{/Editable}" forceSelection="false" selectedKey="{/SelectedProduct2}" items="{
							path: '/ProductCollection2',
							sorter: { path: 'Name' }
						}">
						<core:Item key="{ProductId}" text="{Name}" />
					</Select>
					<Label text="Group By"/>
					<Select />
					<ToolbarSpacer/>
					<SearchField width="300px"/>
					<Button icon="sap-icon://filter"></Button>
					<Button icon="sap-icon://business-objects-experience"></Button>
				</Toolbar>
				<OverflowToolbar>
					<Button text="{i18n>edit}"></Button>
					<Button text="New" press=".onNew"></Button>
					<Button text="Export"></Button>
					<Button text="Copy"></Button>

					<MenuButton text="Add Response">
						<menu>
							<Menu>
								<MenuItem text="Edit" icon="sap-icon://edit" press="onPress">
									<customData>
										<core:CustomData key="target" value="p1" />
									</customData>
								</MenuItem>
								<MenuItem text="Save" icon="sap-icon://save" press="onPress" />
								<MenuItem text="Open" icon="sap-icon://open-folder" press="onPress" />
							</Menu>
						</menu>
					</MenuButton>
					<MenuButton text="Change Status"></MenuButton>

				</OverflowToolbar>
				<!--<fb:FilterBar id="idFilterBar" reset="onReset" useToolbar="false" showGoOnFB="true">
				</fb:FilterBar>-->
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
								<l:VerticalLayout>

			<table:Table id="table1">
				<table:columns>
					<table:Column width="11rem">
						<Label text="Product Name" />
						<table:template>
							<Text text="{Name}" wrapping="false" />
						</table:template>
					</table:Column>
					<table:Column width="11rem">
						<Label text="Product Id" />
						<table:template>
							<Input value="{ProductId}"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
			<OverflowToolbar>
				<Label text="Details" />
			</OverflowToolbar>
			<l:BlockLayout keepFontSize="true">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell title="General">
						<Label text="Campaign" />
						<Input editable="false"/>
						<Label text="Start Date" />
						<Input editable="false"/>
						<Label text="End Date" />
						<Input editable="false"/>
						<Label text="Additional Information" width = "100%"/>
						<TextArea  width = "100%" editable="false"/>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell title="Administrative Data">
						<Label text="Created On" />
						<Input editable="false"/>
						<Label text="Created By" />
						<Input editable="false"/>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
			</l:VerticalLayout>

		</f:content>
	</f:DynamicPage>
</mvc:View>
