<mvc:View id="idBpDetail" controllerName="sap.sme.crm.CAMP.controller.Detail"
	xmlns:uxap="sap.uxap"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:table="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
	<!-- 	<semantic:FullscreenPage title="{i18n>detail/title}" showNavButton="true" navButtonPress="onNavBack" showFooter="false" titleLevel="H1">
		<semantic:content> 		
		</semantic:content>
	</semantic:FullscreenPage>
-->
	<uxap:ObjectPageLayout id="objectPageLayout" showTitleInHeaderContent="true" alwaysShowContentHeader="false" preserveHeaderStateOnScroll="false" headerContentPinnable="true" isChildPage="true" enableLazyLoading="false" upperCaseAnchorBar="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle areaShrinkRatio="1:1.6:1.6">
				<uxap:expandedHeading>
					<Title text="New Campaign" wrapping="true" />
				</uxap:expandedHeading>

				<uxap:snappedHeading>
					<Title text="New Campaign" wrapping="true" />
				</uxap:snappedHeading>

				<uxap:expandedContent>
					<Text text="{/id}" />
				</uxap:expandedContent>

				<uxap:snappedContent>
					<Text text="{/id}" />
				</uxap:snappedContent>

				<uxap:actions>
					<uxap:ObjectPageHeaderActionButton id="saveButton" text="Save" type="Transparent" hideText="false" press="onSave" />
					<uxap:ObjectPageHeaderActionButton id="editButton" text="Edit" type="Emphasized" hideText="false" press="onEdit" />
					<uxap:ObjectPageHeaderActionButton id="newButton" type="Transparent" text="New" hideText="false" hideIcon="true" press="onNew" />
					<uxap:ObjectPageHeaderActionButton id="deleteButton" type="Transparent" text="Delete" hideText="false" hideIcon="true" press="onDelete" />
					<uxap:ObjectPageHeaderActionButton id="testButton" type="Transparent" text="Test" hideText="false" hideIcon="true" press="onTest" />

				</uxap:actions>
				<uxap:navigationActions>
					<uxap:ObjectPageHeaderActionButton icon="sap-icon://synchronize" type="Transparent" tooltip="First" press="onRefresh" />
					<uxap:ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-up" type="Transparent" tooltip="Previous" press="onPrev" />
					<uxap:ObjectPageHeaderActionButton icon="sap-icon://slim-arrow-down" type="Transparent" tooltip="Next" press="onNext" />

				</uxap:navigationActions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:sections>
			<uxap:ObjectPageSection id="idSectionA">
				<uxap:subSections>
					<uxap:ObjectPageSubSection id="idGeneralPage" title="General">
						<uxap:blocks>
							<layout:BlockLayout>
								<layout:BlockLayoutRow>
									<layout:BlockLayoutCell title="General">
										<Label text="Campaign ID"/>
										<Input/>
										<Label text="Campaign Description"/>
										<Input/>
										<Label text="Campaign Type"/>
										<Input/>
										<Label text="Start Date"/>
										<DatePicker/>
										<Label text="End Date"/>
										<DatePicker/>
										<Label text="Status"/>
										<Input/>
										<Label text="Target Group"/>
										<Input/>
										<Label text="Target Group Status"/>
										<Input/>
										<Label text="Target Group Members"/>
										<Input/>
										<Label text="Additional Information"/>
										<Input/>
									</layout:BlockLayoutCell>
									<layout:BlockLayoutCell title="Administrative Data">
										<Label text="Created On"/>
										<DateTimePicker/>
										<Label text="Created By"/>
										<DateTimePicker/>
										<Label text="Executed On"/>
										<Input/>
										<Label text="Executed By"/>
										<Input/>
									</layout:BlockLayoutCell>
								</layout:BlockLayoutRow>

							</layout:BlockLayout>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection>
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Response Options">
						<uxap:blocks>
							<layout:BlockLayout>
								<layout:BlockLayoutRow>
									<layout:BlockLayoutCell title="Response Options">
									</layout:BlockLayoutCell>
								</layout:BlockLayoutRow>
							</layout:BlockLayout>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection>
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Execution Details">
						<uxap:blocks>
							<layout:BlockLayout>
								<layout:BlockLayoutRow>
									<layout:BlockLayoutCell title="Response Options">
									</layout:BlockLayoutCell>
								</layout:BlockLayoutRow>
							</layout:BlockLayout>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection>
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="Attachment">
						<uxap:blocks>
							<layout:BlockLayout>
								<layout:BlockLayoutRow>
									<layout:BlockLayoutCell title="Attachments">
									</layout:BlockLayoutCell>
								</layout:BlockLayoutRow>
							</layout:BlockLayout>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:footer>
			<OverflowToolbar>
				<ToolbarSpacer />
				<Button type="Emphasized" text="Save" press="onSave" />
				<Button type="Default" text="Cancel" press="onCancel" />
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>

</mvc:View>
